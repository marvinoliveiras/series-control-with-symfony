{% extends "base.html.twig" %}

{% block title %}
    Episodes of {{ season.number }} season of the {{ series.name }}
{% endblock %}

{% block body %}
    <form method="post">
        <ul class="list-group">
            {% for episode in episodes %}
                <li class="list-group-item d-flex justify-content-between">
                    Episode {{ episode.number }}
                    <input type="checkbox" name="episodes[{{ episode.id }}]"
                        {% if episode.watched %} checked {% endif %}>
                </li>
            {% endfor %}
        </ul>
        <button class="btn btn-primary mt-2">
            Save
        </button>
    </form>
{% endblock %}